{
  "name": "camino-ui",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vue-cli-service serve --open",
    "build": "vue-cli-service build",
    "gandi": "npm run build && rm -rf htdocs && mv dist htdocs",
    "start": "node ./index.js",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "compression": "^1.7.2",
    "connect-history-api-fallback": "^1.5.0",
    "dotenv": "^5.0.1",
    "express": "^4.16.3"
  },
  "devDependencies": {
    "graphql": "^0.13.2",
    "vue": "^2.5.16",
    "vue-cookies": "^1.5.6",
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.2.0",
    "@types/node": "^10.3.0",
    "@vue/cli-plugin-babel": "^3.0.0-beta.15",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.15",
    "@vue/cli-service": "^3.0.0-beta.15",
    "@vue/eslint-config-prettier": "^3.0.0-beta.15",
    "@vue/eslint-config-standard": "^3.0.0-beta.15",
    "apollo-cache-inmemory": "^1.2.2",
    "apollo-client": "^2.3.2",
    "apollo-link-http": "^1.5.4",
    "babel-plugin-graphql-tag": "^1.6.0",
    "graphql-tag": "^2.9.2",
    "leaflet": "^1.3.1",
    "nprogress": "^0.2.0",
    "pixrem": "^4.0.1",
    "pleeease-filters": "^4.0.0",
    "postcss-button": "^0.3.15",
    "postcss-calc": "^6.0.1",
    "postcss-color-mod-function": "^2.4.2",
    "postcss-custom-media": "^6.0.0",
    "postcss-custom-properties": "^7.0.0",
    "postcss-custom-selectors": "^4.0.1",
    "postcss-font-family-system-ui": "^3.0.0",
    "postcss-font-variant": "^3.0.0",
    "postcss-grid-fluid": "^0.3.3",
    "postcss-grid-system": "^0.4.11",
    "postcss-image-set-polyfill": "^0.4.4",
    "postcss-import": "^11.1.0",
    "postcss-inline-svg": "^3.1.1",
    "postcss-loader": "^2.1.5",
    "postcss-media-minmax": "^3.0.0",
    "postcss-nesting": "^5.0.0",
    "postcss-normalize": "^4.0.0",
    "postcss-selector-matches": "^3.0.1",
    "postcss-selector-not": "^3.0.1",
    "postcss-typescale": "^0.2.1",
    "postcss-url": "^7.3.2",
    "stylelint": "^9.2.1",
    "stylelint-config-prettier": "^3.2.0",
    "stylelint-config-standard": "^18.2.0",
    "vue-meta": "^1.5.0",
    "vue-router": "^3.0.1",
    "vue-template-compiler": "^2.5.16",
    "vuex": "^3.0.1"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ],
    "plugins": [
      "graphql-tag"
    ]
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "plugin:vue/recommended",
      "standard",
      "prettier",
      "prettier/standard"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-prettier"
    ],
    "rules": {
      "property-no-unknown": [
        true,
        {
          "ignoreProperties": [
            "typescale",
            "gf",
            "/button-/"
          ]
        }
      ]
    },
    "ignoreFiles": [
      "./dist/**/*"
    ]
  },
  "postcss": {
    "plugins": {
      "postcss-normalize": {},
      "postcss-import": {},
      "postcss-typescale": {},
      "postcss-custom-properties": {},
      "postcss-calc": {},
      "postcss-image-set-polyfill": {},
      "postcss-nesting": {},
      "postcss-custom-media": {},
      "postcss-media-minmax": {},
      "postcss-custom-selectors": {},
      "postcss-color-mod-function": {},
      "postcss-font-family-system-ui": {},
      "postcss-font-variant": {},
      "pleeease-filters": {},
      "pixrem": {
        "html": false
      },
      "postcss-selector-matches": {},
      "postcss-selector-not": {},
      "postcss-grid-system": {},
      "postcss-grid-fluid": {},
      "postcss-button": {},
      "postcss-inline-svg": {}
    }
  },
  "browserslist": [
    "defaults"
  ]
}
